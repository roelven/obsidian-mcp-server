# CouchDB Connection Settings
COUCHDB_BASE_URL=your-couchdb-instance
COUCHDB_DATABASE_NAME=your-livesync-database-name
COUCHDB_USER=your-couchdb-username
COUCHDB_PASSWORD=your-couchdb-password

# Server Settings
SERVER_PORT=8000

# LiveSync Settings
USE_PATH_OBFUSCATION=false # Currenty not supported
VAULT_ID=my-vault

# Optional: Logging level
LOG_LEVEL=INFO

# Rate limiting settings (optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Encryption settings (for encrypted vaults)
VAULT_PASSPHRASE=

# Optional: Fallback search limit for finding notes by path
# Controls how many recent notes are scanned if direct path lookup fails.
# Default is 500 in the application configuration if not set here.
# COUCHDB_LIST_LIMIT_FOR_PATH_SEARCH=500 